@model ViewModel.ContentBlockForm
<!-- «Start| ContentBlockForm» -->
<form data-module="ContentBlockForm" role="form" method="post" action="@Url.Current()" data-validation-style="tooltip" class="input-form">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <h2>Content Block Details</h2>
   <div class="form-body">
      <div class="form-group row">
         <label for="Key" class="control-label">
            Key
         </label>
         <div class="group-control">
            <span name="Key">
               @Model.Item.Key
            </span>
         </div>
      </div>
      <div class="form-group row required-item">
         <label for="Content" class="control-label">
            Content
         </label>
         <div class="group-control">
            <textarea asp-for="Content" class="form-control" autofocus="autofocus" data-control="html-editor"></textarea>
         </div>
      </div>
   </div>
   <div class="buttons-row">
      <div class="buttons">
         <button name="Cancel" class="btn btn-secondary" onclick="return page.goBack(this);" data-redirect="ajax">Cancel</button>
         <button type="submit" name="Save" class="btn btn-primary" formaction='@Url.ActionWithQuery("ContentBlockForm/Save")' default-button="true"><i class="fa-check fa"></i>
            Save</button>
      </div>
   </div>
</form>
<!-- «End| ContentBlockForm» -->
